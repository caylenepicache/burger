
<div class="row">
  <center>
    <!-- Left side (ready to eat) -->
    <div class="col-md-6">
      <h1 class="red_font">Let's eat!</h1>
      <div id="ready_to_eat">

        <!-- Dynamically Insert Ready Burgers Here -->
        {{#each burgers}}
          {{#unless devoured}}
          <form action="api/burgers/{{id}}" method="POST">
            <div class="input-group">
              <li class="form-control">{{id}}. {{burger_name}}</li>
              {{> burgers/burger-block devoured=false}}
            </div>
          </form>
          {{/unless}}
        {{/each}}

      </div>
    </div>

    <!-- Right side (already eaten) -->
    <div class="col-md-6">
      <h4 class="red_font">Already eaten!</h4>
      <div id="already_eaten">

        <!-- Dynamically Insert Eaten Burgers Here -->
        {{#each burgers}}
          {{#if this.devoured}}
          <form action="api/burgers/{{id}}" method="PUT">
            <div class="input-group">
              <li class="form-control">{{this.id}}. {{this.burger_name}}</li>
              {{> burgers/burger-block devoured=true}}
            </div>
          </form>
          {{/if}}
        {{/each}}

      </div>
    </div>
  </center>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burgerInput" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

